<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alpoeventapp.qualityapp">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.UserEventListActivity" />
        <activity android:name=".views.RegisterActivity" />
        <activity android:name=".views.PasswordActivity" />
        <activity android:name=".views.ProfileActivity" />
        <activity android:name=".views.UpdateProfile" />
        <activity android:name=".views.UpdatePassword" />
        <activity android:name=".views.UserEventUpdateActivity" />
        <activity android:name=".views.CreateEventActivity" />
        <activity android:name=".views.BrowseEventsListActivity" />
        <activity android:name=".views.EventDetailActivity" />
        <activity android:name=".views.SavedEventsListActivity" />
        <activity android:name=".views.UserEventDetailActivity" />
        <activity android:name=".views.SearchActivity" />

    </application>

</manifest>