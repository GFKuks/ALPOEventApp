<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="181dp"
    android:padding="8dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvBrowseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_title_header"
        app:layout_constraintBottom_toTopOf="@+id/etBrowseTitle"
        app:layout_constraintStart_toStartOf="@+id/etBrowseTitle" />

    <EditText
        android:id="@+id/etBrowseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nosaukums" />

    <TextView
        android:id="@+id/tvBrowseAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_address_header"
        app:layout_constraintBottom_toTopOf="@+id/etBrowseAddress"
        app:layout_constraintStart_toStartOf="@+id/etBrowseAddress" />

    <TextView
        android:id="@+id/tvBrowseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_date_time"
        app:layout_constraintBottom_toTopOf="@+id/etBrowseDate"
        app:layout_constraintStart_toStartOf="@+id/etBrowseDate" />

    <EditText
        android:id="@+id/etBrowseAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/etBrowseTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etBrowseTitle"
        app:layout_constraintTop_toBottomOf="@+id/etBrowseTitle"
        tools:text="Adrese" />

    <EditText
        android:id="@+id/etBrowseDate"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/etBrowseAddress"
        app:layout_constraintTop_toBottomOf="@+id/etBrowseAddress"
        tools:text="Datums" />

    <TextView
        android:id="@+id/tvGuestCountHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guest_count_header"
        app:layout_constraintBottom_toTopOf="@+id/etBrowseGuestCount"
        app:layout_constraintStart_toStartOf="@+id/etBrowseGuestCount" />

    <EditText
        android:id="@+id/etBrowseGuestCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textPersonName"
        android:text="@string/guest_count"
        app:layout_constraintBaseline_toBaselineOf="@+id/etBrowseDate"
        app:layout_constraintEnd_toEndOf="@+id/etBrowseAddress" />

</android.support.constraint.ConstraintLayout>